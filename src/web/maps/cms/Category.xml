<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.lehecai.admin.web.domain.cms">
	<class name="Category" table="admin_cms_category">
        <id name="id">
            <generator class="native"></generator>
        </id>
        <property name="name"/>
        <property name="caLevel" column="ca_level"/>
        <property name="parentID" column="parent_id"/>
        <property name="templatePath" column="template_path"/>
        <property name="targetPath" column="target_path"/>
        <property name="StaticPageType">
        	<column name="static_page_type" precision="22" scale="0"/>
			<type name="com.lehecai.admin.web.hibernate.usertype.IntegerBeanLabelUserType">
				<param name="targetClass">
					com.lehecai.admin.web.enums.StaticPageType
				</param>
			</type>
        </property>
        <property name="orderView" column="order_view"/>
        <property name="valid"/>
        <property name="memo" length="4000"/>
        <property name="roleId" column="role_id"/>
    </class>
</hibernate-mapping>