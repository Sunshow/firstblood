<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.lehecai.admin.web.domain.weibo">
	<class name="TokenInfo" table="admin_weibo_token">
        <id name="id">
            <generator class="native"></generator>
        </id>
        <property name="uid" />
        <property name="token" not-null="true"/>
        <property name="tokenSecret" column="token_secret" />
        <property name="weiboType" not-null="true">
        	<column name="weibo_type" precision="22" scale="0" not-null="true" />
			<type name="com.lehecai.admin.web.hibernate.usertype.IntegerBeanLabelUserType">
				<param name="targetClass">
					com.lehecai.core.lottery.WeiboType
				</param>
			</type>
        </property>
        <property name="createTime" column="create_time" not-null="true" update="false"/>
        <property name="updateTime" column="update_time"/>
        <property name="expiresIn" column="expires_in"/>
        <property name="valid" not-null="true"/>
    </class>
</hibernate-mapping>