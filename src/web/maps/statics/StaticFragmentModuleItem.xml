<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.lehecai.admin.web.domain.statics">
	<class name="StaticFragmentModuleItem" table="admin_static_fragment_module_item">
        <id name="id">
            <generator class="native"></generator>
        </id>
        <property name="itemKey">
        	<column name="item_key"></column>
        </property>
        <property name="itemName">
        	<column name="item_name"></column>
        </property>
        <property name="itemType">
        	<column name="item_type" precision="22" scale="0"/>
			<type name="com.lehecai.admin.web.hibernate.usertype.IntegerBeanLabelUserType">
				<param name="targetClass">
					com.lehecai.admin.web.enums.ItemType
				</param>
			</type>
        </property>
        <property name="moduleId">
        	<column name="module_id" />
        </property>
    </class>
</hibernate-mapping>