<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.lehecai.admin.web.domain.user">
	<class name="RolePermission" table="admin_role_permission" dynamic-update="true">
	   <id name="id">
            <generator class="native"></generator>
        </id>
        <property name="roleId" column="role_id" not-null="true"/>
        <property name="permissionId" column="permission_id" not-null="true"/>
		<property name="permissionItemIds" column="permission_item_ids"/>
    </class>
</hibernate-mapping>